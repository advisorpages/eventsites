---
layout: layouts/base.njk
title: "Upcoming Events"
---

<h1 class="text-3xl font-bold text-center mb-8">Upcoming Events</h1>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  {% for event in events %}
    <a href="/eventsites{{ event.path }}" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg transition">
      <h2 class="text-2xl font-semibold text-blue-800">{{ event.title }}</h2>
      <p class="text-gray-600 mt-2">{{ event.date }} &middot; {{ event.location }}</p>
    </a>
  {% endfor %}
</div>
